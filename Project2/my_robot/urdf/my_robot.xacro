<?xml version="1.0"?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  
  <xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo"/>

  <!-- ====================== BASE / CHASSIS ========================== -->
  <link name="robot_footprint"/>

  <joint name="robot_footprint_joint" type="fixed">
    <parent link="robot_footprint"/>
    <child  link="chassis"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="chassis">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="15.0"/>
      <inertia ixx="0.10" ixy="0" ixz="0"
               iyy="0.10" iyz="0" izz="0.10"/>
    </inertial> 
    
    <!-- visual / collision box -->
    <visual name="chassis_vis">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size=".4 .2 .1"/></geometry>
    </visual>
    
    <collision name="chassis_col">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size=".4 .2 .1"/></geometry>
    </collision>

    <!-- passive casters (spheres) -->
    <visual name="front_caster_vis">
      <origin xyz=" 0.15 0 -0.05" rpy="0 0 0"/>
      <geometry><sphere radius="0.05"/></geometry>
    </visual>
    <collision name="front_caster_col">
      <origin xyz=" 0.15 0 -0.05" rpy="0 0 0"/>
      <geometry><sphere radius="0.05"/></geometry>
    </collision>

    <visual name="rear_caster_vis">
      <origin xyz="-0.15 0 -0.05" rpy="0 0 0"/>
      <geometry><sphere radius="0.05"/></geometry>
    </visual>
    <collision name="rear_caster_col">
      <origin xyz="-0.15 0 -0.05" rpy="0 0 0"/>
      <geometry><sphere radius="0.05"/></geometry>
    </collision>
  </link>

  <!-- =========================== WHEELS ============================ -->
  <link name="left_wheel">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="5"/>
      <inertia ixx="0.10" ixy="0" ixz="0"
               iyy="0.10" iyz="0" izz="0.10"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry><cylinder radius="0.10" length="0.05"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
    </collision>
  </link>

  <link name="right_wheel">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="5"/>
      <inertia ixx="0.10" ixy="0" ixz="0"
               iyy="0.10" iyz="0" izz="0.10"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry><cylinder radius="0.10" length="0.05"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry><cylinder radius="0.10" length="0.05"/></geometry>
    </collision>
  </link>

  <joint name="left_wheel_hinge"  type="continuous">
    <parent link="chassis"/><child link="left_wheel"/>
    <origin xyz="0  0.15 0" rpy="0 0 0"/>
    <axis  xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <joint name="right_wheel_hinge" type="continuous">
    <parent link="chassis"/><child link="right_wheel"/>
    <origin xyz="0 -0.15 0" rpy="0 0 0"/>
    <axis  xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- =========================== CAMERA ============================ -->
  <link name="camera">
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="1e-6" ixy="0" ixz="0"
               iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0"/><geometry><box size="0.05 0.05 0.05"/></geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0"/><geometry><box size="0.05 0.05 0.05"/></geometry>
    </collision>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="chassis"/><child link="camera"/>
    <origin xyz="0.2 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ========================== LIDAR ============================== -->
  <link name="hokuyo">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="1e-5"/>
      <inertia ixx="1e-6" ixy="0" ixz="0"
               iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
    
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://my_robot/meshes/hokuyo.dae"/>
      </geometry>
    </visual>
    
    <collision>
      <origin xyz="0 0 0"/><geometry><box size="0.10 0.10 0.10"/></geometry>
    </collision>
  </link>

  <joint name="hokuyo_joint" type="fixed">
    <parent link="chassis"/><child link="hokuyo"/>
    <origin xyz="0.15 0 0.10" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  

  <gazebo reference="left_wheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="right_wheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="camera">
    <material>Gazebo/Blue</material>
  </gazebo>
  <gazebo reference="chassis">
    <material>Gazebo/Red</material>
  </gazebo>

</robot>

